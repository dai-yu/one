.slide-image{
  width: 100%;
}
.selection{
  border-bottom: 20rpx solid #ddd;
  padding-bottom: 20rpx;
}

swiper{
  height: 400rpx;
}

.header{
  border-left-width: 10rpx;
  border-left-style: solid;
  border-left-color: chartreuse;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.text-all{
  color:green;
  font-size: 30rpx;
}
.content{
  display: flex;
  flex-wrap: wrap;
  justify-content: center; 
}
.content-item{
  height: 250rpx;
  width: 47%;
  margin: 5rpx;
  position: relative;
}
.content-item image{
  width: 100%;
  height: 100%;
}

.content-item-text{
  position: absolute;
  bottom: 0rpx;
  color: white;
  font-size: 30rpx;
  background:-webkit-linear-gradient(bottom,rgba(0, 0, 0,0.8),rgba(0, 0, 0,0.1));
  height: 80rpx;
  width: 94%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-left: 3%;
  padding-right: 3%;
  padding-bottom: 3%;
}
.list-item{
  height: 600rpx;
  width: 100%;
  margin-top: 20rpx;
}
.list-item-image{
  height: 70%;
  width: 100%;
  position: relative;
}
.list-item-image1{
  height: 100%;
  width: 100%;
}
.list-item-text{
  height: 30%;
  width: 96%;
  margin-top: 20rpx;
  padding-left:2%;
  padding-right:2%;
}
.avatar{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -50rpx;
  right: 50rpx;
}
.list-item-text-content{
  font-size: 30rpx;
  color:#999;
  margin-top: 20rpx;
}
.video1{
  width: 100%;
}